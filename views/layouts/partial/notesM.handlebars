<!--Notes Modal-->

<div class="modal fade modalNote" id="noteModal{{this._id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class=" ml-2 modal-title">Notes for {{this.title}}</h4>
                 <button type="button" class="close text-right" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                {{#if this.notes}}
                    {{#each this.notes}}
                        <div class="panel panel-default py-2 text-center border">
                            <div class="panel-body text-left">
                                <p class="d-inline previousNotes mr-5"> {{this.body}}</p>
                                <div class="text-right">
                                <button type="button" class="d-inline btn btn-danger deleteNote ml-5" data-note-id={{this.id}} data-body-id={{this.body}}>X</button>
                            </div>

                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4>No notes for this article yet.</h4>
                        </div>
                    </div>
                {{/if}}
                <div class="form-group">
                    <textarea id="noteText{{this._id}}" class="form-control" rows="4" placeholder="New Note"></textarea>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary saveNote" data-id={{this._id}}>Save Note</button>
            </div>
        </div>
    </div>
</div>